#!/usr/bin/env php
<?php
require __DIR__ . '/../vendor/autoload.php';

use Amp\Loop;
use App\App;

date_default_timezone_set('Asia/Shanghai');

$pkg = $_SERVER['argv'][1];

Loop::run(function () use ($pkg) {
    $app = new App(__DIR__ . '/../config/app.yml', __DIR__ . '/../storage/');

    yield from $app->purge($pkg);
});
